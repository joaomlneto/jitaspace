{
  "extends": "@jitaspace/tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "esnext",
    "strictNullChecks": true
  },
  "include": [
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public/sw.js"
  ]
}
