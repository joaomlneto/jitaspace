{
  "name": "jitaspace",
  "private": true,
  "engines": {
    "node": ">=24.5.0"
  },
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "analyze": "turbo analyze",
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "cypress:install": "(cd apps/web && NODE_ENV=test pnpm with-env cypress install)",
    "cypress:open": "(cd apps/web && NODE_ENV=test pnpm with-env cypress open)",
    "cypress:run": "(cd apps/web && NODE_ENV=test pnpm with-env cypress run)",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "dev": "turbo dev --parallel",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "kubb:generate": "turbo kubb:generate",
    "lint": "turbo lint --continue -- --cache --cache-location 'node_modules/.cache/.eslintcache' && manypkg check",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache' && manypkg fix",
    "type-check": "turbo type-check",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "test": ""
  },
  "dependencies": {
    "@changesets/cli": "^2.29.4",
    "@jitaspace/prettier-config": "workspace:*",
    "@manypkg/cli": "^0.24.0",
    "@turbo/gen": "^2.5.4",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "prettier": "@jitaspace/prettier-config"
}
